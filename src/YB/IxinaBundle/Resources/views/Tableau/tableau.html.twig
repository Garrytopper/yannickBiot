{% extends "YBIxinaBundle::ixinaHome.html.twig" %}

{% block css %}
{{ parent() }}
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/ybixina/css/blocTableau.css') }}">
{% endblock %}

{% block barreIcone %}
    <a id="iconeClientAjouter" href="{{ path('yb_ixina_newCustomer', {origine: 'tableau'}) }}"></a>
    <a id="iconeTacheAjouter" href="{{ path('yb_ixina_newNote') }}"></a>
    <a id="iconeTableauFermer" href="{{ path('yb_ixina_homepage') }}"></a>
{% endblock %}

{% block bloc %}
    <div id="blocTableau">
        <div id="navBlocTableau">
            <div style="margin: auto">Today : {{ today|date('d/m') }}</div>
        </div>
        <div id="tableauBlocTableau">
            <div id="listeClient">
                <ul>
                    {% for client in clients %}
                        <li>
                            <div id="origine" class="{% if today|date('m/y') != client.dateCreation|date('m/y') %}iconePortefeuille{% endif %}"></div>
                            {% if today|date('m/y') != client.dateCreation|date('m/y') %}
                                <div id="iconePortefeuille"></div>
                            {% endif %}
                            <div style="width: 200px">
                                {{ client.etatDossier }} / 
                                <a href="{{ path('yb_ixina_modifCustomer', {id: client.id, origine: 'tableau'}) }}">{{ client.nom }}</a>
                            </div>
                            <div style="width: 100px; {% if client.action == 'Retour' %} color: red; {% elseif client.action == "Relance" %} color: green; {% endif %} ">
                                {{ client.action }}
                            </div>
                            <div style="width: 75px">
                                {{ client.dateProchaineAction|date('d/m')}}
                            </div>
                            <div style="color: red; width: 75px;">
                                {% if client.action == 'Retour'%}
                                    {{ client.budgetClient }} â‚¬
                                {% endif %}
                            </div>
                            {% if client.dessin == false %}
                                <div id="iconeDessiner"></div>
                            {% endif %}
                            {% if client.preparation == false %}
                                <div id="iconePreparer"></div>
                            {% endif %}
                            
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        
    </div>
{% endblock %}

{% block javaScript %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('bundles/ybixina/js/blocTableau.js') }}"></script>
{% endblock %}