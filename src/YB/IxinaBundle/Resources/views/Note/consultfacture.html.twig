{% extends "YBIxinaBundle::ixinaHome.html.twig" %}

{% block css %}
{{ parent() }}
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/ybixina/css/consultFacturation.css') }}">
{% endblock %}

{% block barreIcone %}
    <a id="iconeClientAjouter" href="{{ path('yb_ixina_newCustomer', {origine: 'new' }) }}"></a>
    <a id="iconeTacheFermer" href="{{ path('yb_ixina_homepage') }}"></a>
    <a id="iconeTableauConsulter" href="{{ path('yb_ixina_tableau') }}"></a>
{% endblock %}

{% block bloc %}
    <div id="blocNote">
        <div id="hautpage"></div>
        <div id="contenant">
            {% for facture in factures %}
                <div class="row">
                    <div class="nom">{{ facture.nom }}</div>
                    <div class="type">{{ facture.typeFacture}}</div>
                    <a href="{{ path('yb_ixina_suppfacture', {'id': facture.id}) }}"><div id="iconeSupprimer"></div></a>
                </div>
            {% endfor %}   
        </div>    
        <div id="baspage">
            <div id="texte">Liste Factures</div>
            <a id="iconeNavigation" href="{{ path('yb_ixina_newRelCheq') }}"></a>
        </div>
    </div>
{% endblock %}

{% block javaScript %}
{{ parent() }}
{% endblock %}